<%= simple_form_for(@auction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.input :ends_on %>
    <%= f.input :reserve_price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
